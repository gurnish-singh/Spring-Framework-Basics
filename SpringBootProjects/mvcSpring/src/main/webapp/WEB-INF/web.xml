<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>gurnish</servlet-name>
    <servlet-class>
      org.springframework.web.servlet.DispatcherServlet
      <!--this is our dispatcher servlet-->
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>gurnish</servlet-name>
    <url-pattern>/</url-pattern> <!--'/' means any url will go through this servlet for responses or controllers-->
  </servlet-mapping>
</web-app>
